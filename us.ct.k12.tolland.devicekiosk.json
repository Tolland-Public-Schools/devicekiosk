{
    "id": "us.ct.k12.tolland.devicekiosk",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.6",
    "sdk": "org.kde.Sdk",
    "base": "com.riverbankcomputing.PyQt.BaseApp",
    "base-version": "6.6",
    "command": "devicekiosk",
    "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--device=all",
    "--device=dri",
    "--socket=pulseaudio",
    "--share=network"
    ],
    "modules": [
        "python3-requests.json",
        "python3-EmailMessage.json",
        "python3-pyyaml.json",
        {
            "name": "devicekiosk",
            "buildsystem" : "simple",
            "build-commands" : [
                "python3 setup.py build",
                "python3 setup.py install --prefix=/app --root=/"
            ],
            "sources": [
                {
                    "type": "archive",
                    "path": "dist/us.ct.k12.tolland.devicekiosk-2.0.0.tar.gz"
                }
            ]
        }
    ]
}
